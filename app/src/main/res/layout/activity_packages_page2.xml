                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Book Now"
                            android:backgroundTint="@color/colorAccent"
                            app:cornerRadius="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

