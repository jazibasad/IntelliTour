            android:layout_marginBottom="24dp"/>

        <!-- Package 6: Swat -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pkg_swat" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Swat Valley (Switzerland of East)"
                        android:textSize="22sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textColor="@color/colorPrimary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 Days / 4 Nights"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stay at: Swat Serena Hotel"
                        android:layout_marginTop="12dp"
                        android:drawableStart="@android:drawable/ic_menu_myplaces"
                        android:drawablePadding="8dp"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        app:drawableTint="@color/colorAccent" />
                    <TextView
                        android:id="@+id/wiki_link_swat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn More on Wikipedia"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="12dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Rs. 45,000"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"/>
                        <com.google.android.material.button.MaterialButton
